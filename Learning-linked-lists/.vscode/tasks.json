{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Run main.c (File IO)",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "gcc main.c -O2 -Wall -o main.exe && main.exe < input.txt > output.txt"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
